- if @products.empty?
	%span.text-warning There are no products!
- else
	%table.table.table-hover.table-bordered
		%thead
			%tr
				%th Name
				%th Description
				%th Price
				%th Actions
		%tbody
			- @products.each do |product|
				%tr
					%td
						%strong= product.name
					%td.text-info= product.description
					%td.text-info= product.formatted_price
					%td
						= link_to 'Delete', product, method: :delete, data: {confirm: "Are you sure you want to delete #{product.name}"}
						|
						= link_to 'Edit', edit_product_path(product)