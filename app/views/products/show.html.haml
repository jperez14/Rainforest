%p#notice= notice
= image_tag @product.photo.url
%p
  %strong Name:
  = @product.name
%p
  %strong Description:
  = @product.description
%p
  %strong Price:
  = @product.formatted_price
%h3 Reviews
- @product.reviews.each do |review|
  %p
    = review.comment
    %br
      Added on: #{review.created_at}
%h3 New Review
= render 'reviews/form'
= link_to 'Edit', edit_product_path(@product)
|
\#{link_to 'Back', products_path}