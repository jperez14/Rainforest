/ %p#notice= notice
.format
  .imageposition
    = image_tag @product.photo.url
.format
  .showformat
    %p
      %h4 Name:
      = @product.name
    %br
    %p
      %h4 Description:
      = @product.description
    %br
    %p
      %h4 Price:
      = @product.formatted_price
    %br
    %h4 Reviews:
    - @product.reviews.each do |review|
      %p
        = review.comment
        %br
          Added on: #{review.created_at}
    %br
    %br
    %br
    %h4 New Review:
    = render 'reviews/form'
    = link_to 'Edit', edit_product_path(@product)
    |
    = link_to 'Main Page', root_path
    %br
    %br