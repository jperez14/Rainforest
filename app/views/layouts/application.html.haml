!!!
%html
	%head
		%title Rainforest
		= stylesheet_link_tag	'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag	'application'
		= csrf_meta_tags
	%body
		.row-fluid
			.span10.offset1
				.hero-unit.text-center
					%h1
						Rainforest
					%p
						by Fire Breathing Rubber Duckies
					%a.btn{"data-toggle" => "modal", :href => "#newProductModal"} Create Product
		#newProductModal.modal.hide.fade{"aria-hidden" => "true"}
			.modal-header
				%h3 Add a New Product
				.modal-body
					= form_for(@newproduct, :html => { :multipart => true}) do |f|
						- if @newproduct.errors.any?
							#error_explanation
								%h2
									= pluralize(@newproduct.errors.count, "error")
									prohibited this product from being saved:
								%ul
									- @newproduct.errors.full_messages.each do |message|
										%li= message
						.field
							= f.label :name
							%br
							= f.text_field :name
						.field
							= f.label :description
							%br
							= f.text_area :description
						.field
							= f.label :price_in_cents
							%br
							= f.number_field :price_in_cents
						.field
							= f.file_field :photo
						.actions
							= f.submit
					.modal-footer
						%button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
					%br
					%br
		= yield